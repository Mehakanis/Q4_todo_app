  "keyNamingConvention": {
    "pattern": "{namespace}.{category}.{key}",
    "examples": [
      "common.buttons.save",
      "tasks.list.title",
      "voice.errors.not_supported",
      "settings.language.select_language"
    ],
    "rules": [
      "Use lowercase with underscores for multi-word keys",
      "Namespace must be one of: common, tasks, voice, settings, auth, navigation, chatbot",
      "Category groups related keys within a namespace",
      "Key must be descriptive and unique within its category"
    ]
  },
  "placeholderSyntax": {
    "description": "Dynamic values in translations use curly brace syntax",
    "pattern": "{variableName}",
    "examples": [
      {
        "key": "tasks.list.count",
        "en": "You have {count} tasks",
        "ur": "آپ کے پاس {count} کام ہیں",
        "placeholders": ["count"]
      },
      {
        "key": "voice.feedback.task_created",
        "en": "Task created: {title}",
        "ur": "کام بنایا گیا: {title}",
        "placeholders": ["title"]
      },
      {
        "key": "common.messages.confirm_delete",
        "en": "Are you sure you want to delete {itemName}?",
        "ur": "کیا آپ واقعی {itemName} حذف کرنا چاہتے ہیں؟",
        "placeholders": ["itemName"]
      }
    ]
  },
  "pluralizationRules": {
    "description": "Handle plural forms in different languages",
    "syntax": "{key}_{count}",
    "examples": [
      {
        "key": "tasks.list.count",
        "en": {
          "zero": "No tasks",
          "one": "1 task",
          "other": "{count} tasks"
        },
        "ur": {
          "zero": "کوئی کام نہیں",
          "one": "1 کام",
          "other": "{count} کام"
        }
      }
    ]
  },
  "translationGuidelines": {
    "tone": [
      "Professional but friendly",
      "Clear and concise",
      "Action-oriented for buttons/CTAs"
    ],
    "urduSpecific": [
      "Use formal Urdu (فصیح اردو), not colloquial",
      "Avoid excessive English loanwords where Urdu equivalents exist",
      "Maintain consistent terminology across all keys",
      "Test RTL layout with all translations"
    ],
    "consistency": [
      "Use same translation for same concept across all keys",
      "Maintain consistent capitalization rules",
      "Keep placeholder names identical across all locales"
    ]
  },
  "validationRules": {
    "completeness": "Every key in en.json must exist in ur.json and vice versa",
    "placeholders": "Placeholder names must match exactly across all locales",
    "emptyValues": "No translation value can be empty string",
    "keyFormat": "Keys must follow {namespace}.{category}.{key} pattern",
    "maxLength": "Translation values should not exceed 500 characters"
  },
  "fileStructure": {
    "location": "src/messages/",
    "files": [
      {
        "name": "en.json",
        "description": "English translations",
        "example": {
          "common": {
            "buttons": {
              "save": "Save",
              "cancel": "Cancel"
            }
          }
        }
      },
      {
        "name": "ur.json",
        "description": "Urdu translations",
        "example": {
          "common": {
            "buttons": {
              "save": "محفوظ کریں",
              "cancel": "منسوخ کریں"
            }
          }
        }
      }
    ]
  },
  "implementationNotes": {
    "typeGeneration": "TypeScript types will be auto-generated from en.json structure",
    "codeSplitting": "Translation files will be code-split by locale for optimal bundle size",
    "caching": "Translations cached in browser after first load for performance",
    "fallback": "If a key is missing in active locale, fall back to English",
    "rtl": "Urdu locale automatically applies RTL layout via CSS direction attribute"
  }
}
